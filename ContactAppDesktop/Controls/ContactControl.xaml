<UserControl x:Class="ContactAppDesktop.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactAppDesktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#AAE5E5E5">
        <StackPanel>
            <TextBlock x:Name="nameTextBlock" 
                Text="Name Lastname"
                      FontSize="20"
                      FontWeight="Bold"/>
            <TextBlock Text="+49 173 756 9459" 
                       x:Name="phoneTextBlock" 
                       FontSize="15"
                       Foreground="DodgerBlue"/>
            <TextBlock Text="tfdroessler@gmail.com"
                       x:Name="emailTextBlock" 
                       FontSize="15"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
